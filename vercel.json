{
	"buildCommand": "npm run build",
	"outputDirectory": "build",
	"cleanUrls": true,
	"trailingSlash": false,
	"headers": [
		{
			"source": "/fonts/(.*)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/(.*)\\.(?:jpg|jpeg|png|gif|svg|ico|webp)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/(.*)\\.(?:js|css|woff|woff2|ttf)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		}
	]
}
